@model Book

<tr data-toggle="tooltip" data-placement="left" title="Get it for only $@Model.Price!">
    <th scope="row">@Model.BookId</th>
    <td>@Model.Title</td>
    <td>@Model.Author</td>
    <td>@Model.Publisher</td>
    <td>@Model.ISBN</td>
    <td>@Model.Classification</td>
    <td>@Model.Category</td>
    <td>@Model.Pages</td>
    <td>$@Model.Price</td>
</tr>