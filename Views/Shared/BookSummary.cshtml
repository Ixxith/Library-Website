@{
}

@model Book

<tr data-toggle="tooltip" data-placement="left" title="Get it for only $@Model.Price!">
    <th scope="row">@Model.BookId</th>
    <td>@Model.Title</td>
    <td>@Model.Author</td>
    <td>@Model.Publisher</td>
    <td>@Model.ISBN</td>
    <td>@Model.Classification</td>
    <td>@Model.Category</td>
    <td>@Model.Pages</td>
    <td>$@Model.Price</td>
    <td><form id="@Model.BookId" asp-page="/Cart" method="post">
            <input type ="hidden" asp-for="BookId" />
            <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
            <button type="submit" class="btn btn-success">
                Add to Cart
            </button>
        </form></td>
</tr>