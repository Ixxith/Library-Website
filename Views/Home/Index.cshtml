@{
    ViewData["Title"] = "Home Page";
}

@model BookListViewModel

<div class="text-center">
    <h1 class="display-3">Books R' US</h1>
    <div class="card">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">

                    <img class="d-block w-100" height="500" src="~/img/671822c2f63dd5f65d8fd15c9710420b.jpg" alt="First slide">
                    <div class="carousel-caption d-none d-lg-block">
                        <h5>Great prices</h5>
                        <p>Find a book you love for a price you love</p>
                    </div>
                </div>
                <div class="carousel-item">

                    <img class="d-block w-100" height="500" src="~/img/photo-1457369804613-52c61a468e7d.jpg" alt="Second slide">
                    <div class="carousel-caption d-none d-lg-block">
                        <h5>Easy to use</h5>
                        <p>Our website makes getting your next favorite a snap</p>
                    </div>
                </div>
                <div class="carousel-item">

                    <img class="d-block w-100" height="500" src="~/img/videoblocks-opened-books-against-a-background-stacks-of-books_b5gfams1pf_thumbnail-full01.png" alt="Third slide">
                    <div class="carousel-caption d-none d-lg-block">
                        <h5>Massive selection</h5>
                        <p>Choose from our wide variety of titles that we offer - everything from sci-fi to cooking</p>
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
    <br />
    <br />
    <br />
    <br />
    <h4 class="display-4">See what books we have to offer</h4>
    <br />
    <div class="card">

        <table class="table table-striped">
            <thead class="thead-light">
                <tr>
                    <th scope="col">Book Id</th>
                    <th scope="col">Title</th>
                    <th scope="col">Author</th>
                    <th scope="col">Publisher</th>
                    <th scope="col">ISBN</th>
                    <th scope="col">Classification</th>
                    <th scope="col">Category</th>
                    <th scope="col">Pages</th>
                    <th scope="col">Price</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var x in Model.books)
                {
                <tr data-toggle="tooltip" data-placement="left" title="Get it for only $@x.Price!">
                    <th scope="row" >@x.BookId</th>
                    <td>@x.Title</td>
                    <td>@x.Author</td>
                    <td>@x.Publisher</td>
                    <td>@x.ISBN</td>
                    <td>@x.Classification</td>
                    <td>@x.Category</td>
                    <td>@x.Pages</td>
                    <td>$@x.Price</td>
                </tr>
                        }

                    

                </tbody>
        </table>
    </div>
    <br />
    <div class="fixed-bottom w-100 bg-dark align-items-center">
        <div class="pagination p-1" style="display:inline-flex" page-model="@Model.PagingInfo" page-action="Index" page-classes-enabled="true" page-class="btn mr-3" page-class-selected="bg-primary text-white" page-class-normal="bg-light">

        </div>
    </div>
</div>